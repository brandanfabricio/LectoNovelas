<div class="container">
    <h1> Pagina: {{page.actual}}  de {{page.total}}</h1>
    {{#each capitulos }}

    <div>

        <h1 class="titulo" id="{{cap}}"> {{titulo}}</h1>
        <p>
            {{{contenido}}}
        </p>


    </div>
    <hr width="100%" hidden="20px">
    {{/each}}
    

        

    <form action="/capitulo/leer/{{id}}/{{page.pagina}}">
        <button type="submit">Siguente</button>
    </form>        
    


</div>